style(type='text/css').
  .filter-container {
    position: absolute;
    top: calc(100% + 0rem);
    right: 0;
    bottom: auto;
    left: 0;
    border-top: 0.2rem solid #fff;
    opacity: .0;
    z-index: -1;
    transform-origin: 50% 0%;
    transform: translateY(-6rem) scaleY(0);
    transition: all ease-in-out .6s;
  }
